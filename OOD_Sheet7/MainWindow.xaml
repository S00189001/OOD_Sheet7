                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="UI_Ex1_Button" Content="Button" Width="100" Height="30" Grid.Row="0" Grid.Column="1" Click="UI_Ex1_Button_Click"/>
